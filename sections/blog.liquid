<style>
/* 1) Default all blog images to portrait */
.products_grid .blog__card-img {
  aspect-ratio: 3/4 !important;
  width: 100%;
  object-fit: cover;
  display: block;
}

/* 2) Flip only cards 1,3,7,9,10 â†’ DOM indices 2,4,8,10,11 */
.products_grid > .blog__card:nth-child(1)  .blog__card-img,
.products_grid > .blog__card:nth-child(3)  .blog__card-img,
.products_grid > .blog__card:nth-child(7)  .blog__card-img,
.products_grid > .blog__card:nth-child(8)  .blog__card-img,
.products_grid > .blog__card:nth-child(10)  .blog__card-img,
.products_grid > .blog__card:nth-child(11)  .blog__card-img, 
.products_grid > .blog__card:nth-child(12)  .blog__card-img {
  aspect-ratio: 4/3 !important;
}

.underline-link::before,
.underline-link.is--alt::before,
.underline-link.is--alt::after{
  content: "";
  position: absolute;
  bottom: 0em;
  left: 0;
  width: 100%;
  height: 0.0625em;
  background-color: #131313;
  transition: transform 0.735s cubic-bezier(0.625, 0.05, 0, 1);
  transform-origin: right;
  transform: scaleX(0) rotate(0.001deg);
}

.underline-link:hover::before {
  transform-origin: left;
  transform: scaleX(1) rotate(0.001deg);
}

/* Alt */
.underline-link.is--alt::before {
  transform-origin: left;
  transform: scaleX(1) rotate(0.001deg);
  transition: transform 0.735s cubic-bezier(0.625, 0.05, 0, 1);
  transition-delay: 0.3s;
}
.underline-link.is--alt::after {
  transform-origin: right;
  transform: scaleX(0) rotate(0.001deg);
  transition: transform 0.735s cubic-bezier(0.625, 0.05, 0, 1);
  transition-delay: 0s;
}

/* 2) Trigger on card hover instead of link hover */
.blog__card:hover .underline-link.is--alt::before {
  transform-origin: right;
  transform: scaleX(0) rotate(0.001deg);
  transition-delay: 0s;
}
.blog__card:hover .underline-link.is--alt::after {
  transform-origin: left;
  transform: scaleX(1) rotate(0.001deg);
  transition-delay: 0.3s;
}

.is-author:before {
content: "By ";
}

